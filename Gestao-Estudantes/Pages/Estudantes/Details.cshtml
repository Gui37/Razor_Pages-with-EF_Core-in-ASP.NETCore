@page
@model Gestao_Estudantes.Pages.Estudantes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Estudante</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estudante.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estudante.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estudante.Apelido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estudante.Apelido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estudante.DataInscricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estudante.DataInscricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estudante.Inscricaos)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Título do Curso</th>
                    <th>Nota</th>
                </tr>
                @foreach (var item in Model.Estudante.Inscricaos)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Curso.NomeC)</td>
                        <td>@Html.DisplayFor(modeItem => item.Nota)</td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Estudante?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
